<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
	<link rel="stylesheet" href="/css/chart.css">
</head>

	<% include ../partials/header %>
	
	<div class="row">
		<h1 class="page-header">
				Dashboard
		</h1>
		<div class="col-xs-12 col-sm-6 col-md-3 placeholder text-center">
			<div class="chart">
				<div id="users" class="percentage" data-percent="<%= totalUsers %>">
					<div class="chart-label">
						<span></span><sup></sup>
						<div class="chart-label">Users</div>
					</div>
				</div>
			</div>
		</div>
		
		<div class="col-xs-12 col-sm-6 col-md-3 placeholder text-center">
			<div class="chart">
				<div id="images" class="percentage" data-percent="<%= totalImages %>">
					<div class="chart-label">
						<span></span><sup></sup>
						<div class="chart-label">Images</div>
					</div>
				</div>
			</div>
		</div>
		
		<% pages.forEach(function(page){ %>
			<div class="col-xs-12 col-sm-6 col-md-3 placeholder text-center">
				<div class="chart">
					<div id="<%= page._id %>" class="percentage" data-percent="<%= page.total %>">
						<div class="chart-label">
							<span></span><sup></sup>
							<div class="chart-label"><%= page._id %> <%= page.total > 1 ? "'s" : '' %></div>
						</div>
					</div>

				</div>
			</div>
		<% }) %>
		
		
	</div>


	<% include ../partials/footer %>
	<script src="/js/libs/jquery.easy-pie-chart-min-.js"></script>
	
</body>
</html>